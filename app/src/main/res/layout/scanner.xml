<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/agnb_scanner_back">

    <com.budiyev.android.codescanner.CodeScannerView
        android:id="@+id/scanner_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:autoFocusButtonColor="@color/white"
        app:autoFocusButtonVisible="true"
        app:flashButtonColor="@color/white"
        app:flashButtonVisible="true"
        app:maskColor="#6C000000"
        >

    </com.budiyev.android.codescanner.CodeScannerView>

    <TextView
        android:id="@+id/tv_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scannedView"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/comment"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@+id/tv_textView"
        android:layout_marginTop="51dp"
        android:ems="10"
        android:fontFamily="serif-monospace"
        android:hint="Comment"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/confirm_button"
        android:layout_width="145dp"
        android:layout_height="59dp"
        android:layout_below="@+id/tv_textView"
        android:layout_marginStart="12dp"
        android:layout_marginTop="60dp"
        android:layout_toEndOf="@+id/comment"
        android:backgroundTint="@color/purple"
        android:fontFamily="serif-monospace"
        android:text="Confirm"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scannedView"
        android:fontFamily="serif-monospace"
        android:text="location"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <ToggleButton
        android:id="@+id/location_button"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scannedView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="143dp"
        android:backgroundTint="@color/purple"
        android:fontFamily="serif-monospace"
        android:text="ToggleButton"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/scannedView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:alpha="0"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:text="TextView" />

    <Button
        android:id="@+id/photo_taking_btn"
        android:layout_width="wrap_content"
        android:layout_height="63dp"
        android:layout_below="@+id/confirm_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="134dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="136dp"
        android:layout_marginBottom="225dp"
        android:backgroundTint="@color/purple"
        android:fontFamily="serif-monospace"
        android:text="@string/taking_photo_txt"
        android:textSize="16sp"
        android:visibility="visible" />

</RelativeLayout>